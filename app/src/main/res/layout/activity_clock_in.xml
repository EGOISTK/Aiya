<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPureWhite"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingEnd="@dimen/common_margin_15"
            android:paddingStart="@dimen/common_margin_15"
            android:text="@string/back"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mission_picture"
            android:textColor="@color/colorTitle"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_random_match"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingEnd="@dimen/common_margin_15"
            android:paddingStart="@dimen/common_margin_15"
            android:text="@string/edit"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title_bar">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_15"
            android:includeFontPadding="false"
            android:text="Day 4"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/common_text_size_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/common_margin_15"
            android:layout_toEndOf="@id/tv_date"
            android:includeFontPadding="false"
            android:text="2016.12.08"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/common_text_size_13"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_mission_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_sub_title"
        android:layout_marginStart="@dimen/common_margin_15"
        android:layout_marginTop="@dimen/common_margin_15"
        android:includeFontPadding="false"
        android:text="一起看电影《你的名字》"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/common_text_size_16"/>

    <GridView
        android:id="@+id/gv_mission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_mission_name"
        android:layout_marginEnd="@dimen/common_margin_5"
        android:layout_marginStart="@dimen/common_margin_5"
        android:layout_marginTop="@dimen/common_margin_15"
        android:columnWidth="113dp"
        android:horizontalSpacing="@dimen/common_margin_5"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/common_margin_5"/>

    <Button
        android:id="@+id/btn_invite"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_selector_with_corner_18"
        android:text="@string/upload_picture"
        android:textColor="@color/colorPureWhite"
        android:textSize="@dimen/common_text_size_16"/>

</RelativeLayout>