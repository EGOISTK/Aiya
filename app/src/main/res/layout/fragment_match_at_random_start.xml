<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingEnd="@dimen/common_margin_15"
            android:paddingStart="@dimen/common_margin_15"
            android:text="@string/back"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/love_match_at_random"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_random_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_title_bar"
        android:includeFontPadding="false"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/love_match_at_random_switch_warn"
        android:textColor="@color/colorContentSecondary"
        android:textSize="13sp"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_can_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_random_warn"
        android:layout_alignParentEnd="true"
        android:paddingEnd="@dimen/common_margin_15"
        android:paddingStart="@dimen/common_margin_15"/>

    <ImageView
        android:id="@+id/iv_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"/>


    <Button
        android:id="@+id/btn_love_start_random_match"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_below="@+id/iv_random"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/button_selector"
        android:text="@string/love_match_at_random_start"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_16"/>

    <TextView
        android:id="@+id/tv_love_match_at_random_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_love_start_random_match"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:includeFontPadding="false"
        android:text="@string/love_match_at_random_warn"
        android:textColor="@color/colorContentMain"
        android:textSize="13sp"/>


</RelativeLayout>
