<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/colorBackGroundPicture">
    <com.aiyaschool.aiya.me.view.RoundImageView
        android:id="@+id/my_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="26.5dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/guanggao1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="34.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="公子羽"
                android:textColor="#2A2A2B"
                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:id="@+id/member_icon"
                android:layout_centerVertical="true"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/member"/>
            <TextView
                android:id="@+id/tv_member"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通用户"
                android:textSize="12dp"
                android:textColor="#6A6868"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sign_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="签名：落霞明 月盈盈 来去无言去不闻"
            android:textColor="@color/colorSignName"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="礼物卷  256"
                android:textColor="@color/colorName"
                android:textSize="13dp" />



            <TextView
                android:id="@+id/tv_gift"
                android:visibility="gone"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="礼物卷  256"
                android:textColor="@color/colorName"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>