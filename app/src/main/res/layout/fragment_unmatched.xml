<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/love_unmatched_title"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_love_match_at_random"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingEnd="@dimen/common_margin_15"
            android:paddingStart="@dimen/common_margin_15"
            android:text="@string/love_match_at_random"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_love_warn_single"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/common_margin_15"
        android:text="@string/love_unmatched_single_warn"
        android:textColor="@color/colorContentMain"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/common_margin_15"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/love_unmatched_filter"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/common_text_size_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/love_unmatched_DIY"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:background="@color/white"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/common_margin_15"
                android:text="@string/love_unmatched_height"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/common_text_size_16"/>

            <Button
                android:id="@+id/btn_love_height"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_with_rightward_26"
                android:drawableEnd="@mipmap/rightward_26"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/love_unmatched_default_height"
                android:textColor="@color/colorContentSecondary"
                android:textSize="13sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/switch_love_height"
                android:text="@string/love_unmatched_5RMB"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_love_height"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingEnd="@dimen/common_margin_15"
                android:paddingStart="16dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="@string/love_unmatched_age"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/common_text_size_16"/>

            <Button
                android:id="@+id/btn_love_age"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_with_rightward_26"
                android:drawableEnd="@mipmap/rightward_26"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/love_unmatched_default_age"
                android:textColor="@color/colorContentSecondary"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/switch_love_age"
                android:text="@string/love_unmatched_4RMB"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_love_age"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/common_margin_15"
                android:paddingStart="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/common_margin_15"
                android:text="@string/love_unmatched_school_major"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/common_text_size_16"/>

            <Button
                android:id="@+id/btn_love_school_major"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_with_rightward_26"
                android:drawableEnd="@mipmap/rightward_26"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/love_unmatched_default_school_major"
                android:textColor="@color/colorContentSecondary"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/switch_love_school_major"
                android:text="@string/love_unmatched_2RMB"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_love_school_major"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/common_margin_15"
                android:paddingStart="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/common_margin_15"
                android:text="@string/love_unmatched_hometown"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/common_text_size_16"/>

            <Button
                android:id="@+id/btn_love_hometown"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_with_rightward_26"
                android:drawableEnd="@mipmap/rightward_26"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/love_unmatched_default_hometown"
                android:textColor="@color/colorContentSecondary"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/switch_love_hometown"
                android:text="@string/love_unmatched_2RMB"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_love_hometown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/common_margin_15"
                android:paddingStart="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/common_margin_15"
                android:text="@string/love_unmatched_constellation"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/common_text_size_16"/>

            <Button
                android:id="@+id/btn_love_constellation"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_with_rightward_26"
                android:drawableEnd="@mipmap/rightward_26"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/love_unmatched_default_constellation"
                android:textColor="@color/colorContentSecondary"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/switch_love_constellation"
                android:text="@string/love_unmatched_1RMB"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_love_constellation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/common_margin_15"
                android:paddingStart="16dp"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/common_margin_15"
                android:text="@string/love_unmatched_shield"
                android:textColor="@color/colorContentSecondary"
                android:textSize="@dimen/common_text_size_16"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_shield_contact"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/common_margin_15"
                android:paddingStart="16dp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_love_unmatched_start_match"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_selector"
            android:text="@string/love_unmatched_start_match"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_16"/>

        <TextView
            android:id="@+id/tv_love_unmatched_warn_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:text="@string/love_unmatched_warn_point"
            android:textColor="@color/colorContentSecondary"
            android:textSize="13sp"/>

    </LinearLayout>

</LinearLayout>